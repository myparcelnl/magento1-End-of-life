    </p>
    <div id="myparcel_be_form_container">
            <p>
                <label for="myparcel_be_shipment_type" class="normal" ><?php echo $this->__('Shipment type');?></label>
                <select id="myparcel_be_shipment_type" name="myparcel_be[shipment_type]">
                    <option value="normal" <?php echo $type == 1 ? 'selected="selected"' : '';?>><?php echo $this->__('Normal'); ?></option>
                    <?php if ($this->getDestinationCountry() == 'NL'): ?>
                    <option value="letter_box" <?php echo $_disabled;?> <?php echo $type == 2 ? 'selected="selected"' : '';?>><?php echo $this->__('Letter box'); ?></option>
                    <?php endif; ?>
                    <option value="unstamped" <?php echo $_disabled;?> ><?php echo $this->__('Unpaid'); ?></option>
                </select>
            </p>
        <div id="myparcel_consignment_options">
            <?php if ($this->getDestinationCountry() == 'NL'): ?>
                <p>
                    <label for="myparcel_be_home_address_only" class="normal"><?php echo $this->__('Home address only');?></label>
                    <input id="myparcel_be_home_address_only" type="checkbox" value="1" name="myparcel_be[home_address_only]" <?php echo $_homeSelected;?> />
                </p>
                <p>
                    <label for="myparcel_be_signature_on_receipt" class="normal"><?php echo $this->__('Signature on receipt');?></label>
                    <input id="myparcel_be_signature_on_receipt" type="checkbox" value="1" name="myparcel_be[signature_on_receipt]" <?php echo $_signatureSelected;?> />
                </p>
                <p>
                    <label for="myparcel_be_return_if_no_answer" class="normal"><?php echo $this->__('Return if no answer');?></label>
                    <input id="myparcel_be_return_if_no_answer" type="checkbox" value="1" name="myparcel_be[return_if_no_answer]" <?php echo $_returnNoAnswerSelected;?> />
                </p>
                <p>
                    <label for="myparcel_be_xl" class="normal"><?php echo $this->__('Large package');?></label>
                    <input id="myparcel_be_xl" type="checkbox" value="1" name="myparcel_be[is_xl]" <?php echo $_isXlSelected;?> />
                </p>
                <p>
                    <label for="myparcel_be_insured" class="normal">(<?php echo $this->__('Total order value: &euro; %s',$this->getOrderTotal());?>) <?php echo $this->__('Insured up to:');?> </label>
                    <select id="myparcel_be_insured_amount" name="myparcel_be[insured_amount]" >
                        <option value="50" <?php echo $_insuredUpTo == 50 ? 'selected="selected"' : '';?>>&euro; 50</option>
                        <option value="250" <?php echo $_insuredUpTo == 250 ? 'selected="selected"' : '';?>>&euro; 250</option>
                        <option value="500" <?php echo $_insuredUpTo == 500 && $_insuredUpTo < 1000 ? 'selected="selected"' : '';?>>&euro; 500</option>
                        <?php while($tmpInsured <= 5000) :?>
                            <option value="<?php echo $tmpInsured;?>" <?php echo $this->getOrderTotal() <= $tmpInsured && $this->getOrderTotal() > ($tmpInsured-500) ? 'selected="selected"' : ''; ?>>&euro; <?php echo $tmpInsured;?></option>
                            <?php $tmpInsured = $tmpInsured + 500; ?>
                        <?php endwhile; ?>
                    </select>
                    <input id="myparcel_be_insured" type="checkbox" value="1" name="myparcel_be[insured]" <?php echo $_insuredSelected;?> />

                </p>

            <?php elseif($_countryNeedsCustoms): ?>
                <p>
                    <label for="myparcel_be_customs_type" class="normal"><?php echo $this->__('Customs Shipment Type');?></label>
                    <select id="myparcel_be_customs_type" class="select required-entry" name="myparcel_be[customs_type]">
                        <?php foreach($_customsTypeOptions as $_option):?>
                            <?php $_selected = ''; ?>
                            <?php if ($_option['value'] == $_defaultCustomsCode): ?>
                                <?php $_selected = 'selected="selected"'; ?>
                            <?php endif; ?>

                            <option value="<?php echo $_option['value']; ?>" <?php echo $_selected ?>>
                                <?php echo $this->__($_option['label']); ?>
                            </option>
                        <?php endforeach;?>
                    </select>
                </p>
                <p>
                    <label for="myparcel_be_customs_content_code" class="normal"><?php echo $this->__('Customs Content HS Code');?></label>
                    <input id="myparcel_be_customs_content_code" type="text" value="<?php echo $_defaultCustomsContentCode;?>" name="myparcel_be[customs_content_type]" />
                </p>
                <p>
                    <small><?php echo $this->__('Select content type for Cross Domestic products, see <a href="http://gebruikstarief.douane.nl" target="_blank">http://gebruikstarief.douane.nl</a>');?></small>
                </p>
                <p>
                    <small><?php echo $this->__('Shipment insured up to &euro; %s purchase value', 200);?></small>
                </p>
            <?php else: ?>
                <p>
                    <label for="myparcel_be_xl" class="normal"><?php echo $this->__('Large package');?></label>
                    <input id="myparcel_be_xl" type="checkbox" value="1" name="myparcel_be[is_xl]" <?php echo $_isXlSelected;?> />
                </p>
                <p>
                    <small><?php echo $this->__('Shipment insured up to &euro; %s purchase value', 500);?></small>
                </p>
            <?php endif;?>
        </div>
    </div>
